@font-face {
	font-family: 'dance'; 
	src: local('dance'),
		url(/fonts/dance.ttf); 
}
@import url('https://fonts.googleapis.com/css2?family=Oswald:wght@500&display=swap');
.imba{
    margin-left:10%;
    margin-right:10%;
    margin-top:5%;
    text-align: center;
    font-family: 'Comfortaa', cursive;
font-size: 40px; /* дополнительно устанавливаем размер шрифта */
font-weight: 400; /* устанавливаем жирность шрифта, либо вместо 400, ставим значение — normal */
}

.imba2{
    margin-left:10%;
    margin-right:10%;
    font-family: 'Nunito Sans', sans-serif;
    font-size: 25px;
    color:black;
    text-align:justify;
}

.bounce{
    animation: bouncing
    0.6s ease
    infinite alternate;
}

@keyframes bouncing{
    0% {
        transform: translateY(0px);
    }
    100% {
        transform: translateY(20px);
    }
}

.otstup{
	text-indent: 40px;
}